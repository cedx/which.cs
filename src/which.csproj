<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<Copyright>© Cédric Belin</Copyright>
		<Product>Which for .NET</Product>
		<Version>1.0.0</Version>
	</PropertyGroup>

	<PropertyGroup>
		<AllowUnsafeBlocks>true</AllowUnsafeBlocks>
		<AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
		<ApplicationIcon>../res/favicon.ico</ApplicationIcon>
		<AssemblyName>Belin.Which</AssemblyName>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<OutDir>../bin</OutDir>
		<OutputType>Exe</OutputType>
		<SatelliteResourceLanguages>en</SatelliteResourceLanguages>
		<TargetFramework>net8.0</TargetFramework>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Mono.Unix" Version="7.*-*" />
		<PackageReference Include="System.CommandLine" Version="2.*-*" />
	</ItemGroup>
</Project>
